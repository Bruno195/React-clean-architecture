{
    "compilerOptions": {
      "target": "es5",
      "noUnusedLocals": false,
      "lib": [
        "dom",
        "dom.iterable",
        "esnext"
      ],
      "esModuleInterop": true,
      "module": "esnext",
      "moduleResolution": "node",
      "jsx": "react",
      "rootDirs": ["src", "tests"],
      "baseUrl": "src",
      "paths": {
        "@/*": ["*"],
        "@/tests/*": ["../tests/*"]
      },
      "allowJs": true,
      "resolveJsonModule": true
    },
    "include": ["src"],
    "exclude": ["tests/e2e/cypress"]
  }